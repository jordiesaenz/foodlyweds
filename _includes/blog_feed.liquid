<section class="blog-listing">
  <p class="blog-listing-title">Latest Blog Posts:</p>

  <div class="batch-g batch-g--padding">
    {% for post in site.posts %}
      <a class="article-link batch-c-1-1 batch-c-md-1-2 " href="{{ post.url }}">
        <div class="panel">
          <div class="panel-image" style="background-image: url('{{ post.image }}')">
            <div class="panel-image-overlay">
              <p class="content">{{ post.content | strip_html | truncatewords: 30 }}</p>
            </div>
          </div>
          <div class="panel-heading">
            <h4 class="post-title">{{ post.title }}</h4> - <time class="date">{{ post.date | date: "%D" }}</time>
          </div>
          <p class="category-tag category-tag-{{ post.categories.first }}">{{ post.categories.first }}</p>
        </div>
      </a>
    {% endfor %}
  </div>

</section>
